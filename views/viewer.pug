doctype html
html
  head
    meta(charset='utf-8')
  body(style="padding:0px;margin:0px;width:100%;")
    h3(style="font-family: '黑体';")= article.headline
    h1(style="font-family: '黑体';text-align: center;")= article.title
    h4(style="font-family: '仿宋';text-align: center;")= article.subtitle
    .content(style="font-family: '仿宋';text-align: justify;font-size:12pt")= article.content
        